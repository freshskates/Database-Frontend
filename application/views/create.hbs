<div >
<form action="/api/createAuthor" method="POST" enctype="application/x-www-form-urlencoded">
<br>
    {{#if message}}
    {{#if error}}
    <div class="alert alert-danger" role="alert">
    {{else}}
    <div class="alert alert-success" role="alert">
    {{/if}}
    {{message}}
    </div>
    {{/if }}

  <div class="form-group">
    <label for="author_name">First Name</label>
    <input type="text" class="form-control" id="first_name" name="name" placeholder="Robert">
  </div>
  <div class="form-group">
    <label for="author_name">Last Name</label>
    <input type="text" class="form-control" id="first_name"  name="last" placeholder="Cacho">
  </div>  <div class="form-group">
    <label for="author_name">Middle Initial</label>
    <input type="text" class="form-control" id="first_name" name="middle" placeholder="A">
  </div>  
  <div class="form-group">
    <label for="author_name">Nationality</label>
    <input type="text" class="form-control" id="first_name" name="nationality" placeholder="US">
  </div>
  <div class="form-group">
    <label for="author_name">Date of Birth</label>
    <input type="text" class="form-control" id="first_name" name="DOB" placeholder="yyyy-mm-dd">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>